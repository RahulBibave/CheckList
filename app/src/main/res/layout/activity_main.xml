<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical" android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_gravity="center"
              android:gravity="center"
              android:background="#E9E6E6"
             >

    <ImageView
            android:src="@drawable/mega"
            android:layout_width="200dp"
               android:layout_height="200dp"/>

    <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            >


        <TextView


                android:text="Megapolis"
                android:textStyle="bold"
                android:textSize="30dp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
        />




        <LinearLayout
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:visibility="visible"
                android:layout_marginTop="50dp">


            <EditText
                    android:id="@+id/edt_emailID_login"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/edittext_boarder"
                    android:layout_marginBottom="10dp"
                    android:inputType="phone"
                    android:singleLine="true"
                    android:hint="Mobile No"
                    android:text=""
                    android:elevation="10dp"
                    android:imeOptions="actionNext"
                    android:textColor="@color/black"
                    android:textColorHint="#5A5656"
                    android:drawablePadding="15dp"
                    android:gravity="center"


            />

            <EditText
                    android:id="@+id/edt_Password_login"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/edittext_boarder"
                    android:layout_marginTop="20dp"


                    android:singleLine="true"
                    android:hint="Password"
                    android:text=""
                    android:elevation="10dp"
                    android:inputType="textPassword"
                    android:imeOptions="actionDone"
                    android:textColor="@color/black"
                    android:textColorHint="#5A5656"
                    android:drawablePadding="15dp"
                    android:gravity="center"
            />

            <TextView
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Forgot your password?"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="20dp"/>


            <Button
                    android:id="@+id/btnLogin"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:text="Sign In"
                    android:background="@color/colorAccent"

                    android:layout_marginTop="60dp"
                    android:textSize="15dp"
                    android:elevation="10dp"
                    android:textColor="@color/white"
            />

            <TextView
                    android:visibility="gone"
                    android:id="@+id/txt_Registration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="New User?SIGN UP"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="20dp"

                    android:textSize="16dp"

            />











        </LinearLayout>
    </LinearLayout>

</LinearLayout>