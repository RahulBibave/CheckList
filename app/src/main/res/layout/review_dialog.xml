<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

    <EditText

            android:layout_marginTop="20dp"
            android:id="@+id/dialogNameEt"
            android:hint="Enter Review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    <LinearLayout
            android:gravity="center"
            android:layout_marginTop="50dp"
            android:layout_below="@id/dialogNameEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
                android:id="@+id/dialogCaptureImg"
                android:text="Add Image"
                android:background="@color/colorAccent"
                style="@style/Base.Widget.AppCompat.Button.Colored"
                android:layout_width="120dp"
                android:layout_marginRight="20dp"
                android:layout_height="40dp" />
        <Button
                android:layout_marginLeft="20dp"
                android:background="@color/colorAccent"
                android:id="@+id/dialogShowImg"
                android:text="Show Image"
                style="@style/Base.Widget.AppCompat.Button.Colored"
                android:layout_width="120dp"
                android:layout_height="40dp" />

    </LinearLayout>

    <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center|bottom">
        <Button
                android:id="@+id/dialogLoginBtn"
                android:text="Submit"
                android:background="#486F2D"
                style="@style/Base.Widget.AppCompat.Button.Colored"
                android:layout_width="120dp"
                android:layout_marginRight="20dp"
                android:layout_height="50dp" />
        <Button
                android:layout_marginLeft="20dp"
                android:background="#E22121"
                android:id="@+id/dialogCancelBtn"
                android:text="Cancel"
                style="@style/Base.Widget.AppCompat.Button.Colored"
                android:layout_width="120dp"
                android:layout_height="50dp" />
    </LinearLayout>

</RelativeLayout>